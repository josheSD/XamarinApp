             x:Class="BcpDesign.Views.TabDashboard"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Effects>
        <local:StatusBarEffect
            BackgroundColor="#fff"
            isLight="True"
            />
    </ContentPage.Effects>
    <ContentPage.Content>

        <ScrollView>
            <StackLayout>

                <StackLayout Orientation="Horizontal">

                    <Label
                        Text="Good Morning"
                        TextColor="#8B96A8"></Label>
                    <Label
                            Text="Good Morning"
                            TextColor="#8B96A8"></Label>
                    
                </StackLayout>

                <Frame CornerRadius="20" BackgroundColor="Red" HeightRequest="50">
                    
                </Frame>
                
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>